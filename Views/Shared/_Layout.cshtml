<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web_Adidas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web_Adidas.styles.css" asp-append-version="true" />
</head>
<body>
    <header >
        <nav  class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a href="/">
                    <img class="header__logo" src="~/img/adidas.png" alt="Adidas Logo">
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            
                <nav class="header__nav">
                    <a class="header__link" href="#">GIẦY</a>
                    <a class="header__link" href="#">DÉP</a>
                    <a class="header__link" href="#">QUẦN ÁO</a>
                </nav>
                <div class="header__actions">
                    <div class="header__search">
                        <input class="header__search-input" type="text" placeholder="tìm kiếm">
                        <button class="header__search-button"><img src="~/img/search.png" alt="Search"></button>
                    </div>
                    <div class="header__icons">
                        
                        <a class="header__icon-link" href="#"><img class="header__icon" src="~/img/shopping-bag.png" alt="Cart"></a>
                    </div>
                        
                     <partial name="_LoginPartial" />
                </div>
                </div>
        </nav>
        
    </header>
    
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    
    

    <footer class="border-top footer text-muted">
        
        <div class="container">
            &copy; 2025 - Web_Adidas - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
